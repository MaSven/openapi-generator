plugins {
    id 'java'
    id 'maven-publish'
    id 'io.spring.dependency-management' version '1.0.10.RELEASE'
    id "org.springframework.boot" version "2.3.3.RELEASE"
    {{^interfaceOnly}}    
    {{#apiFirst}}
        id "org.openapi.generator" version "{{{generatorVersion}}}"
    {{/apiFirst}}
    {{/interfaceOnly}}
}

repositories {
    mavenLocal()
    maven {
        url = uri('https://repo.maven.apache.org/maven2/')
    }
}

dependencies {
    implementation(group: "org.springframework.boot", name: "spring-boot-starter-web{{#reactive}}flux{{/reactive}}")
    implementation(group: "org.springframework.data", name: "spring-data-commons")
    implementation(group: "com.fasterxml.jackson.datatype", name: "jackson-datatype-jsr310")
    implementation(group: "com.fasterxml.jackson.core", name: "jackson-databind")
{{#useSpringfox}}
    implementation(group: "io.springfox", name: "springfox-swagger2", version: "2.8.0")
    implementation(group: "io.springfox", name: "springfox-swagger-ui", version: "2.8.0")
    implementation(group: "javax.xml.bind", name: "jaxb-api", version: "2.3.1")
{{/useSpringfox}}
{{^useSpringfox}}
    implementation(group: "io.springfox", name: "springfox-swagger2", version: "2.8.0")
    implementation(group: "org.webjars", name: "swagger-ui", version: "3.14.2")
    implementation(group: "io.swagger", name: "swagger-annotations", version: "1.5.14")
    implementation(group: "com.google.code.findbugs", name: "jsr305", version: "3.0.2")
    implementation(group: "com.fasterxml.jackson.dataformat", name: "jackson-dataformat-yaml")
{{/useSpringfox}}
{{#withXml}}
    implementation(group: "com.fasterxml.jackson.dataformat", name: "jackson-dataformat-xml")
{{/withXml}}
{{#joda}}
    implementation(group: "com.fasterxml.jackson.datatype", name: "jackson-datatype-joda")
{{/joda}}
{{#threetenbp}}
    implementation(group: "com.github.joschi.jackson", name: "jackson-datatype-threetenbp", version: "2.8.4")
{{/threetenbp}}
{{#openApiNullable}}
    implementation(group: "org.openapitools", name: "jackson-databind-nullable", version: "0.2.1")
{{/openApiNullable}}
{{#useBeanValidation}}
    implementation(group: "javax.validation", name: "validation-api")
{{/useBeanValidation}}
{{#virtualService}}
    implementation(group: "io.virtualan", name: "virtualan-plugin", version: "1.0.0")
    implementation(group: "org.hsqldb", name "hsqldb", version: "2.3.2")
    implementation(group: "org.springframework.boot", name: "spring-boot-starter-data-jpa", version: "1.5.9.RELEASE")
{{/virtualService}}
{{#hateoas}}
    implementation(group: "org.springframework.boot", name: "spring-boot-starter-hateoas")
{{/hateoas}}


}
{{^interfaceOnly}}
{{#apiFirst}}
openApiValidate {
 inputSpec = "src/main/resources/openapi.yaml"
 
}
openApiGenerate {
 validateSpec = true
 inputSpec= "src/main/resources/openapi.yaml"
 generatorName = "spring"
 apiPackage= "{{{apiPackage}}}"
 modelPackage = "{{{modelPackage}}}"
 generateSupportingFiles = false
{{#modelNamePrefix}}
 modelNamePrefix = "{{{.}}}"
{{/modelNamePrefix}}
{{#modelNameSuffix}}
 modelNameSuffix = "{{{.}}}"
{{/modelNameSuffix}}
{{#configOptions}}
 configOptions = [
  {{left}}: "{{right}}"
 ]
{{/configOptions}}
}
{{/apiFirst}}
{{/interfaceOnly}}
group = '{{groupId}}'
version = '{{artifactVersion}}'
description = ''
java.sourceCompatibility = JavaVersion.VERSION_1_8

publishing {
    publications {
        maven(MavenPublication) {
            from(components.java)
        }
    }
}

tasks.withType(JavaCompile) {
    options.encoding = 'UTF-8'
}
